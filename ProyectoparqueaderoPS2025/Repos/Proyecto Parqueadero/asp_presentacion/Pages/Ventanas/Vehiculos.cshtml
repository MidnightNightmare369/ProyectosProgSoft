@page
@model asp_presentacion.Pages.Ventanas.VehiculosModel
@{
    ViewData["Titulo"] = "Vehiculos";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Vehiculos</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion !=libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion !=libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion !=libr_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                 Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Placa" />
                <input type="hidden"
                       asp-for="@Model.Actual!.TipoVehiculo" />
            }

            @if (Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Vehiculo</h3>

                    <div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Placa
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPlaca"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Placa" />
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Tipo de vehiculo
                            </label>
                            <div class="col-lg-6">
                                <select id="nmTipoVehiculo"
                                    class="form-control"
                                        asp-for="@Model.Actual!.TipoVehiculo"
                                    asp-items="@(new SelectList(Model.TipoVehiculos, "Id", "TipoVehiculo"))">
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Placa
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                 Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flPlaca"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Placa"
                       placeholder="Filtrar por placa" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Placa
                            </th>
                            <th class="cl_actions">
                                Tipo de vehiculo
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Placa
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._TipoVehiculo!.TipoVehiculo
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>