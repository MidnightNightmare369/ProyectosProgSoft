@page
@model asp_presentacion.Pages.Ventanas.ClientesModel
@{
    ViewData["Titulo"] = "Clientes";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Clientes</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion !=libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion !=libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion ==libr_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != libr_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Cedula" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Vehiculo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.TipoCliente" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Codigo" />
            }

            @if (Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Cliente</h3>

                    <div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cedula
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCedula"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cedula" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Vehiculo
                            </label>
                            <div class="col-lg-6">
                                <select id="nmVehiculo"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Vehiculo"
                                        asp-items="@(new SelectList(Model.Vehiculos, "Id", "Placa"))">
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Tipo de cliente 
                            </label>
                            <div class="col-lg-6">
                                <select id="nmTipoCliente"
                                        class="form-control"
                                        asp-for="@Model.Actual!.TipoCliente"
                                        asp-items="@(new SelectList(Model.TipoClientes, "Id", "TipoCliente"))">
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Codigo
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombre"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>

                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Cedula, @Model.Actual!.Nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == libr_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flPlaca"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Cedula"
                       placeholder="Filtrar por cedula" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Cedula
                            </th>
                            <th>
                                Nombre
                            </th>
                            <th class="cl_actions">
                                Vehiculo
                            </th>
                            <th class="cl_actions">
                                Tipo de cliente
                            </th>
                            <th>
                                Codigo
                            </th>
                            <th>
                                Modificar
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Cedula
                                    </td>
                                    <td>
                                        @elemento.Nombre
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._Vehiculo!.Placa
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._TipoCliente!.TipoCliente
                                    </td>
                                    <td>
                                        @elemento.Codigo
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>